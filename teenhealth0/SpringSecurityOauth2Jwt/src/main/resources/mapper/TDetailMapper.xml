<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springboot.mybatis.mapper.TDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="springboot.mybatis.po.TDetail">
        <id column="id" property="id" />
        <result column="course_code" property="courseCode" />
        <result column="course_name" property="courseName" />
        <result column="action_code" property="actionCode" />
        <result column="count" property="count" />
        <result column="times" property="times" />
        <result column="gap" property="gap" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_code, course_name, action_code, count, times, gap
    </sql>

    <select id="selectByCode" resultMap="BaseResultMap">
        select *
        from t_detail
        where course_code = #{couseCode}
    </select>

</mapper>
