<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springboot.mybatis.mapper.TCourseInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="springboot.mybatis.po.TCourseInfo">
        <id column="id" property="id" />
        <result column="course_name" property="courseName" />
        <result column="course_img" property="courseImg" />
        <result column="course_freq" property="courseFreq" />
        <result column="course_period" property="coursePeriod" />
        <result column="course_time" property="courseTime" />
        <result column="course_calories" property="courseCalories" />
        <result column="course_path" property="coursePath" />
        <result column="is_ai" property="isAi" />
        <result column="detail" property="detail" />
        <result column="update_time" property="updateTime" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_name, course_img, course_freq, course_period, course_time, course_calories, course_path, is_ai, detail, update_time, create_time
    </sql>

    <select id="getCourseById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_course_info
        WHERE id = #{courseId}
    </select>

</mapper>
