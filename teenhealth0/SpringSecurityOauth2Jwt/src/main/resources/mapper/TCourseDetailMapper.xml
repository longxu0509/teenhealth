<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springboot.mybatis.mapper.TCourseDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="springboot.mybatis.po.TCourseDetail">
        <id column="id" property="id" />
        <result column="course_id" property="courseId" />
        <result column="video_id" property="videoId" />
        <result column="action_name" property="actionName" />
        <result column="img_path" property="imgPath" />
        <result column="action_cnt" property="actionCnt" />
        <result column="position" property="position" />
        <result column="indexNO" property="indexNO" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_id, video_id, action_name, img_path, action_cnt, position, indexNO
    </sql>

    <select id="getDetail" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_course_detail
        WHERE course_id = #{courseId}
        ORDER BY indexNO
    </select>

</mapper>
