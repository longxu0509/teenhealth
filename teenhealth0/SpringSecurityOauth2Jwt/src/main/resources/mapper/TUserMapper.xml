<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springboot.mybatis.mapper.TUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="springboot.mybatis.po.TUser">
        <id column="id" property="id" />
        <result column="img_path" property="imgPath" />
        <result column="user_no" property="userNo" />
        <result column="user_password" property="userPassword" />
        <result column="user_name" property="userName" />
        <result column="services" property="services" />
        <result column="city" property="city" />
        <result column="birthday" property="birthday" />
        <result column="gender" property="gender" />
        <result column="age" property="age" />
        <result column="type_name" property="typeName" />
        <result column="type" property="type" />
        <result column="stature" property="stature" />
        <result column="weight" property="weight" />
        <result column="bmi" property="bmi" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, img_path, user_no,user_password, user_name, services, city, birthday, gender, age, type_name, type, stature, weight, bmi, create_time, update_time
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from t_user
        where id = #{id}
    </select>
    <select id="selectByNo" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from t_user
        where user_no = #{userNo}
    </select>

</mapper>
