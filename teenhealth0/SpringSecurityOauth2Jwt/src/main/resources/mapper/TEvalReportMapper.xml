<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springboot.mybatis.mapper.TEvalReportMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="springboot.mybatis.po.TEvalReport">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="score" property="score" />
        <result column="grade" property="grade" />
        <result column="report" property="report" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, score, grade, report, create_time, update_time
    </sql>
    <insert id="insertReport" parameterType="springboot.mybatis.po.TEvalReport"
            useGeneratedKeys="true" keyProperty="id">
        insert into t_eval_report
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="score != null">
                score,
            </if>
            <if test="grade != null">
                grade,
            </if>
            <if test="report != null">
                report,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="score != null">
                #{score},
            </if>
            <if test="grade != null">
                #{grade},
            </if>
            <if test="report != null">
                #{report},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
        </trim>
    </insert>

    <update id="updateReport">
        update t_eval_report
        <set>
            <if test="score != null">
                score = #{score},
            </if>
            <if test="grade != null">
                grade = #{grade},
            </if>
            <if test="report != null">
                report = #{report},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>
    <select id="selectByrReportId" resultMap="BaseResultMap">
        select *
        from t_eval_report
        where id = #{reportId}
    </select>


</mapper>
